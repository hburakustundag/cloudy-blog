<%- include('partials/header'); -%>

<div>
    <% blogs.forEach(element => { %>
    <ul class="blog-list">
        <li class="blog" data-id="<%= element._id %>">
            <p class="blog-title"><%= element.title %></p>
            <p class="blog-content"><%= element.blog %></p>
            <span>Likes:</span>
            <span><%= element.likes %></span>
            <i class="fa-solid fa-thumbs-up"></i>
            <i class="fa-solid fa-trash"></i>
        </li>  
    </ul>
    <% }) %>
    </div>
    <p>Add a blog post:</p>
    <form action="/blogs" method="post" id="blogForm" class="form-control d-flex flex-column mb-5">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" class="mb-2">
        <label for="blogPost">Blog Post: </label>
        <textarea name="blog" cols="40" rows="3" form="blogForm" id="blogPost"></textarea>
        <button type="submit" class="btn add-blog-button">
            <i class="fa-solid fa-plus plus-button"></i>
        </button>
    </form>
    <a href="/logout">Logout</a>


    <%- include('partials/footer'); -%>
