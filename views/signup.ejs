<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Cloudy Blog</title>
  <meta charset="utf-8">
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/login.css">
  <link rel="icon" href="images/favicon.ico?">
</head>
  <body>
    <header>
      <nav class="navbar navbar-nav">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">CLOUDY BLOG</a>
          </div>
            <ul class="nav flex-lg-row">
              <li id="signup" class="nav-item"><a class="nav-link" href="/signup">SIGN UP</a></li>
              <li id="login"><a class="nav-link" href="/login">LOGIN</a></li>
              <li id="about"><a class="nav-link" href="/about">ABOUT US</a></li>
            </ul>
        </div>
      </nav>
    </header>
    <div class="body-container">
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <section class="login text-center">
        <form class="form-signin" action="/signup" method="POST">
            
            <img src="images/cloudicon.png" alt="a cloud icon" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Create Account</h1>

            <label for="username" class="sr-only">Email address</label>
            <input type="text" id="username" class="form-control" name="username" placeholder="User Name" required autofocus>
          
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required>
            
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password"  placeholder="Password" required>
            
            <label for="confirmPassword" class="sr-only">Password</label>
            <input type="password" id="confirmPassword" class="form-control" name="confirmPassword"  placeholder="Confirm Password" required>
            
            <button class="btn btn-lg btn-block login-btn" type="submit">Sign up</button>
        </form>
      </section>

<%- include('partials/footer'); -%>